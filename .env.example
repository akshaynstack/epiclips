# Epiclips Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================
# REQUIRED - AI Services
# ============================================================

# OpenRouter API Key - For AI-powered clip planning
# Get it at: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# OpenRouter Model - Choose your model for clip planning
# Free models: google/gemini-flash-1.5-8b, meta-llama/llama-3.2-3b-instruct:free
OPENROUTER_MODEL=google/gemini-flash-1.5-8b

# Groq API Key - For fast transcription (216x realtime)
# Get it at: https://console.groq.com/keys
GROQ_API_KEY=

# ============================================================
# OPTIONAL - Enhanced Features
# ============================================================

# Enable VLM layout detection (requires OPENROUTER_API_KEY)
# Set to "true" for better webcam overlay detection
USE_VLM_LAYOUT_DETECTION=false

# ============================================================
# OPTIONAL - Cloud Storage (AWS S3)
# ============================================================

# AWS Credentials - For storing rendered clips
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# ============================================================
# OPTIONAL - Webhooks
# ============================================================

# Webhook URL - Receive notifications when jobs complete
WEBHOOK_URL=
WEBHOOK_SECRET=

# ============================================================
# PERFORMANCE TUNING (Optional)
# ============================================================

# Max concurrent jobs (default: 4)
MAX_WORKERS=4

# Max concurrent FFmpeg renders (default: 2)
MAX_RENDER_WORKERS=2
