# ViewCreator Genesis - Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=viewcreator-genesis
DEBUG=false
LOG_LEVEL=INFO

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=viewcreator-media

# Transcription (Groq Whisper) - https://console.groq.com/
GROQ_API_KEY=

# Intelligence Planning (OpenRouter) - https://openrouter.ai/
OPENROUTER_API_KEY=

# API Authentication (generate with: openssl rand -hex 32)
GENESIS_API_KEY=
GENESIS_WEBHOOK_SECRET=

# Parallel Processing (tune for your deployment)
# MAX_WORKERS: Thread pool size for CPU-bound detection operations
# MAX_RENDER_WORKERS: Max concurrent FFmpeg rendering processes
MAX_WORKERS=4
MAX_RENDER_WORKERS=3

# Optional: yt-dlp proxy (e.g., http://user:pass@host:port)
# YTDLP_PROXY=
